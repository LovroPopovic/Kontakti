<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    app:dragEdge="right"
    app:mode="same_level">

    <!-- Content layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Edit button -->
        <TextView
            android:id="@+id/contact_edit"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:text="Edit"
            android:gravity="center"
            android:background="#2196F3"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <!-- Delete button -->
        <TextView
            android:id="@+id/contact_delete"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:text="Delete"
            android:gravity="center"
            android:background="#F44336"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main content layout -->
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Contact image -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/contact_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_baseline_person_24"
            app:civ_border_width="@dimen/_1sdp"
            app:civ_border_color="@color/colorTextPrimary"
            android:padding="@dimen/_5sdp" />

        <!-- Contact name -->
        <TextView
            android:id="@+id/contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="@color/colorTextPrimary"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/contact_image"
            android:layout_toStartOf="@+id/contact_number_dial"
            android:layout_centerInParent="true"
            android:textSize="@dimen/_16sdp" />

        <!-- Dial button -->
        <ImageView
            android:id="@+id/contact_number_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_phone_24"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_10sdp"
            app:tint="@color/colorTextPrimary" />
    </RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>
